{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-tailwindcss"
    ],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "layer",
                    "variants",
                    "responsive",
                    "screen",
                    "custom-variant",
                    "theme"
                ]
            }
        ],
        "declaration-block-trailing-semicolon": "always",
        "string-quotes": "single",
        "at-rule-no-deprecated": null
    }
}